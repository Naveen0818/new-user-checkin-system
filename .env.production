# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/checkin_db
SPRING_DATASOURCE_USERNAME=db_user
SPRING_DATASOURCE_PASSWORD=secure_password

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# JWT Secret
APP_JWT_SECRET=replace_with_a_very_long_and_secure_random_string
APP_JWT_EXPIRATION=86400000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Logging Configuration
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_EXAMPLE_CHECKIN=INFO

# Connection Pool Settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=30000
